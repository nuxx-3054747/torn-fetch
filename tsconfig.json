{
  "compilerOptions": {
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "target": "ESNext",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "baseUrl": ".",
  },
  "include": [
    "./src",
    // "eslint.config.js",
    // "rolldown.config.ts",
  ],
  "exclude": [
    "node_modules",
  ]
}
